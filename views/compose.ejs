<%- include('partials/header'); -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">

  <div class="form-group">
    <label for="text">Title</label>
    <input class="form-control" id="text" type="text" name="blogName" autocomplete="off" autofocus>
  </div>

  <div class="form-group">
    <label for="textarea">Post</label>
    <textarea class="form-control" id="textarea" name="blogPost" rows="5" cols="30" ></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="button">Publish</button>

</form>

<%- include('partials/footer'); -%>
